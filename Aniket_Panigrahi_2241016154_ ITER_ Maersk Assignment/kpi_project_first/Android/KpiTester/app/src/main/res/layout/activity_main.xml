    <Button android:id="@+id/btnSample" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Collect & Send KPI" />
    <TextView android:id="@+id/tvStatus" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Idle" android:paddingTop="8dp"/>
